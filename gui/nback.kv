#:kivy 1.9
#:import theme theme.theme
#:include base

<ScoreBox:BaseLabel>:
  size_hint: None, None
  size: self.height, self.height
  score: 0
  text: self.score


<ScoreBar:BoxLayout>:
  orientation: 'horizontal'
  ScoreBox:
    id: wrong_match
    bg: theme.color.wrong
  ScoreBox:
    id: wrong_inaction
    bg: theme.color.wrong2
  ScoreBox:
    id: correct_inaction
    bg: theme.color.right2
  ScoreBox:
    id: correct_match
    bg: theme.color.right
   EmptySpace:
     

<NBack:BoxLayout>:
  orientation: 'vertical'
  BaseLabel:
    id: current_symbol
    size_hint: None, theme.default.size_hint_y
  BoxLayout:
    orientation: 'horizontal'
    BaseButton:
      text: 'Different'
    BaseButton:
      text: 'Same'
      