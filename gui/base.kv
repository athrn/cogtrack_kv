#:kivy 1.8
#:import theme theme.theme

<BaseButton@Button>:
  background_color: theme.color.button_background
  # background_normal: ''
  font_size: theme.default.font_size

<IconButton@BaseButton>:
  text: ''
  rotate: 0
  icon: 'config'
    
  background_normal: './icons/{}.png'.format(self.icon)
  background_down: ''
  size_hint: None, 1.0
  size: self.height, self.height  
    
  canvas.before:
    PushMatrix
    Rotate:
      angle: root.rotate
      axis: 0, 0, 1
      origin: root.center
  canvas.after:
    PopMatrix

<BaseLabel@Label>:
  text: ''
  font_size: theme.default.font_size

  
<Glue@BaseLabel>:
  size_hint: 1.0, 1.0

  
<EmptySquare@BaseLabel>:
  size_hint: None, 1.0
  size: self.height, self.height
  
