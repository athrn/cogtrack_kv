#:kivy 1.8

<BaseButton@Button>:
  background_color: (1.0, 0, 0, 0.5)

<IconButton@BaseButton>:
  text: ''
  rotate: 0
  icon: 'config'
    
  background_color: (.7,.7,1.0,0.5)
  background_normal: './icons/{}.png'.format(self.icon)
  background_down: ''
  size_hint: None, None
  size: ('48dp', '48dp')
    
  canvas.before:
    PushMatrix
    Rotate:
      angle: root.rotate
      axis: 0, 0, 1
      origin: root.center
  canvas.after:
    PopMatrix

  
# A square button for control flow like back forward settings etc.
<ControlButton@IconButton>:
  size_hint: None, 1.0
  size: self.height, self.height

<EmptySpace@Widget>:
  size_hint: 1.0, 1.0
    
# An empty square
<EmptySquare@EmptySpace>:
  size_hint: None, 1.0
  size: self.height, self.height
  
