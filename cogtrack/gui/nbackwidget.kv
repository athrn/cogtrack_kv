#:kivy 1.9
#:import theme cogtrack.gui.theme.theme

<ScoreBox@EmptySquare>:
  score: 0
  text: str(self.score)


<ScoreBar@BoxLayout>:
  orientation: 'horizontal'
  size_hint: 1.0, None
  size: 0, theme.default.button_height
  ScoreBox:
    id: wrong_match
    bg: theme.color.wrong
    background_color: theme.color.wrong
  ScoreBox:
    id: wrong_no_match
    bg: theme.color.wrong2
  Space:  
  ScoreBox:
    id: no_response
    bg: theme.color.no_response
  Space:  
  ScoreBox:
    id: correct_no_match
    bg: theme.color.correct2
  ScoreBox:
    id: correct_match
    bg: theme.color.correct
     

<NBackWidget@BoxLayout>:
  orientation: 'vertical'
  ScoreBar:
    id: score_bar
  BaseLabel:
    id: show_symbol
    size_hint: None, 1.0 # theme.default.size_hint_y
    pos_hint: {'center_x':0.5}
    text: "X"
    font_size: self.height
  BoxLayout:
    orientation: 'horizontal'
    size_hint: 1.0, None
    size: 0, theme.default.button_height
    BaseButton:
      id: no_match_button
      text: 'No Match'
      bg: theme.color.wrong
      on_press: root.on_no_match()
    BaseButton:
      id: match_button
      text: 'Match'
      bg: theme.color.correct
      on_press: root.on_match()


